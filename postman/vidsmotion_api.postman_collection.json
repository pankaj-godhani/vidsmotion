{
  "info": {
    "name": "VidsMotion API",
    "_postman_id": "f3f3a3a2-6a0c-4c8b-9f2d-vidsmotion-collection",
    "description": "Postman collection for VidsMotion API endpoints (auth, profile, files, uploads).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "bearerToken", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [ { "key": "token", "value": "{{bearerToken}}", "type": "string" } ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Issue API Token",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/token", "host": ["{{baseUrl}}"], "path": ["api","auth","token"] }
          }
        },
        {
          "name": "Register",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\",\n  \"password_confirmation\": \"secret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
          }
        },
        {
          "name": "Logout (revoke token)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/auth/logout", "host": ["{{baseUrl}}"], "path": ["api","auth","logout"] }
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/forgot-password", "host": ["{{baseUrl}}"], "path": ["api","auth","forgot-password"] }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"RESET_TOKEN\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\",\n  \"password_confirmation\": \"secret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/reset-password", "host": ["{{baseUrl}}"], "path": ["api","auth","reset-password"] }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_password\": \"secret123\",\n  \"password\": \"newSecret123\",\n  \"password_confirmation\": \"newSecret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/change-password", "host": ["{{baseUrl}}"], "path": ["api","auth","change-password"] }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/user", "host": ["{{baseUrl}}"], "path": ["api","user"] }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/user/profiles", "host": ["{{baseUrl}}"], "path": ["api","user","profiles"] }
          }
        },
        {
          "name": "Stats",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/user/stats", "host": ["{{baseUrl}}"], "path": ["api","user","stats"] }
          }
        },
        {
          "name": "Uploads (recent)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/user/uploads", "host": ["{{baseUrl}}"], "path": ["api","user","uploads"] }
          }
        },
        {
          "name": "Credits",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/user/credits", "host": ["{{baseUrl}}"], "path": ["api","user","credits"] }
          }
        }
      ]
    },
    {
      "name": "Explore",
      "item": [
        {
          "name": "List Explore Videos",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": {
              "raw": "{{baseUrl}}/api/explore?per_page=12&page=1&sort=latest&filter=all&q=",
              "host": ["{{baseUrl}}"],
              "path": ["api","explore"],
              "query": [
                { "key": "per_page", "value": "12" },
                { "key": "page", "value": "1" },
                { "key": "sort", "value": "latest" },
                { "key": "filter", "value": "all" },
                { "key": "q", "value": "" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "My Files (completed)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": {
              "raw": "{{baseUrl}}/api/my-files?per_page=10",
              "host": ["{{baseUrl}}"],
              "path": ["api","my-files"],
              "query": [ { "key": "per_page", "value": "10" } ]
            }
          }
        },
        {
          "name": "My Files Stats",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/my-files/stats", "host": ["{{baseUrl}}"], "path": ["api","my-files","stats"] }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Reference Image",
          "request": {
            "method": "POST",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "reference_image", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/api/upload-image", "host": ["{{baseUrl}}"], "path": ["api","upload-image"] }
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Piapi Webhook (test)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task_id\": \"TASK_ID\",\n  \"status\": \"processing\",\n  \"result\": {}\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/webhook/piapi", "host": ["{{baseUrl}}"], "path": ["api","webhook","piapi"] }
          }
        }
      ]
    }
  ]
}


