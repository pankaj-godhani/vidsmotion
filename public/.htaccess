# Block access to sensitive files
<FilesMatch "\.(env|log|ini|conf|sql|bak|backup|old|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to directories
<DirectoryMatch "(^|/)\.(git|svn|hg)">
    Order allow,deny
    Deny from all
</DirectoryMatch>
